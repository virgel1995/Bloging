<%- include('../../partials/head.ejs') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"><%- include('../../partials/sidebar.ejs') %></div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <div class="card card-body m-3">
            <h4 class="text-center my-4">Change your password</h4>
            <form action="/auth/change-password" method="POST">
              <div class="form-group">
                <label for="oldPassword">Enter your old password</label>
                <input
                  type="password"
                  name="oldPassword"
                  id="oldPassword"
                  class="form-control <%= error.oldPassword ? 'is-invalid' : '' %> "
                />
                <div class="invalid-feedback">
                    <%= error.oldPassword && error.oldPassword %> 
                </div>
              </div>
              <div class="form-group">
                <label for="newPassword">Enter your new password</label>
                <input
                  type="password"
                  name="newPassword"
                  id="newPassword"
                  class="form-control <%= error.newPassword ? 'is-invalid' : '' %> "
                />
                <div class="invalid-feedback">
                    <%= error.newPassword && error.newPassword %> 
                </div>
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirm you pasword</label>
                <input
                  type="password"
                  name="confirmPassword"
                  id="confirmPassword"
                  class="form-control <%= error.confirmPassword ? 'is-invalid' : '' %> "
                />
                <div class="invalid-feedback">
                    <%= error.confirmPassword && error.confirmPassword %> 
                </div>
              </div>
              <input
                type="submit"
                class="btn btn-primary"
                value="Update Password"
              />
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>
