<%- include('../../partials/head.ejs') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"><%- include('../../partials/sidebar.ejs') %></div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <div class="card card-body m-3">
            <h4>Your Bookmarks</h4>
            <div class="row">
              <% if (posts.length === 0) { %>
              <div class="text-center text-muted my-3 mx-3">
                <p>You have no bookmarked post</p>
              </div>
              <% } else {%> <% posts.reverse().map(post => { %>
              <!--reverse is a array method to reverse the array-->
              <div class="card col-sm-3 m-3">
                <% if (post.thumbnail) { %>
                <img
                  src="<%= post.thumbnail %> "
                  alt="<%= post.title %> "
                  class="card-img-top mt-3"
                />
                <% } %>
                  <a href="/explorer/<%= post._id %>" style="color: #222"
                    ><p class="mt-3"><%= post.title %></p>
                  </a>
              </div>
              <% }) %> <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>
