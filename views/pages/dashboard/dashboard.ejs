<%- include('../../partials/head.ejs') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"><%- include('../../partials/sidebar.ejs') %></div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-8 offset-md-2 my-2">
          <h5>Your Recent Posts</h5>
          <div class="row">
            <% if (posts.length === 0 ) { %>
            <p class="text-center text-muted">There no post created!</p>
            <% } else { %> <% posts.map(post => { %>

            <div class="card col-sm-3 m-2">
              <% if (post.thumbnail) { %>
              <img
                src="<%= post.thumbnail %> "
                alt="<%= post.title %> "
                class="card-img-top mt-3"
              />
              <% } %>
              <div class="card-body p-0">
                <a
                  href="<%= `/explorer/${post._id}` %> "
                  target="_blank"
                  style="color: #222"
                  ><p class="mt-3"><%= post.title %></p></a
                >
              </div>
            </div>
            <% }) %> <% } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 offset-md-2 my-5">
          <h5>Your Recent Bookmarks</h5>
          <div class="row">
            <% if (bookmarks.length === 0 ) { %>
            <p class="text-center text-muted">There no bookmarked post!</p>
            <% } else { %> <% bookmarks.map(post => { %>

            <div class="card col-sm-3 m-2">
              <% if (post.thumbnail) { %>
              <img
                src="<%= post.thumbnail %> "
                alt="<%= post.title %> "
                class="card-img-top mt-3"
              />
              <% } %>
              <div class="card-body p-0">
                <a
                  href="<%= `/explorer/${post._id}` %> "
                  target="_blank"
                  style="color: #222"
                  ><p class="mt-3"><%= post.title %></p></a
                >
              </div>
            </div>
            <% }) %> <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>
</html>
